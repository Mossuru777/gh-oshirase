{
  "name": "gh-oshirase",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "bin": {
    "gh-oshirase": "bin/gh-oshirase.sh"
  },
  "license": "MIT",
  "os": [
    "linux"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "engineStrict": true,
  "dependencies": {
    "body-parser": "^1.18.3",
    "colors": "^1.3.2",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "google-home-notifier": "github:mottox2/google-home-notifier",
    "js-yaml": "^3.12.0",
    "ps-node": "^0.1.6",
    "semver": "^5.6.0",
    "sprintf-js": "^1.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/js-yaml": "^3.11.2",
    "@types/node": "^10.12.12",
    "@types/semver": "^5.5.0",
    "@types/sprintf-js": "^1.1.1",
    "del-cli": "^1.1.0",
    "husky": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tsutils": "^3.5.2",
    "typescript": "^3.2.1"
  },
  "scripts": {
    "preinstall": "node installer_files/dist/preinstall.js",
    "install": "node installer_files/dist/install.js",
    "postinstall": "sed -i -e 's/getaddrinfo()/getaddrinfo({families\\:\\[4\\]\\})/g' node_modules/mdns/lib/browser.js && node installer_files/dist/postinstall.js",
    "preuninstall": "node installer_files/dist/preuninstall.js",
    "build:main": "tsc",
    "clean:main": "del-cli dist",
    "lint:main": "tslint --fix --format stylish --project .",
    "build:installer_files": "tsc --project installer_files",
    "clean:installer_files": "del-cli installer_files/dist",
    "lint:installer_files": "tslint --fix --format stylish --project installer_files",
    "prepare": "npm-run-all -s clean:* lint:* build:*",
    "dev-start": "npm-run-all -s clean:main lint:main build:main && node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepare"
    }
  }
}
