{
  "apps": [
    {
      "name": "gh-oshirase",
      "script": "dist/index.js",
      "node_args": "--max_old_space_size=256",
      "exec_mode": "fork",
      "pid_file": "/usr/local/var/run/gh-oshirase.pid",
      "autorestart": true,
      "merge_logs": true,
      "out_file": "/usr/local/var/log/gh-oshirase.stdout.log",
      "error_file": "/usr/local/var/log/gh-oshirase.stderr.log",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
